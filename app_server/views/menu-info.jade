// menu-info.jade

extends layout

block styles
  style.
    /* CSS styles for the menu-info page */
    body {
      font-family: Arial, sans-serif;
      background-color: #e869a8;
      margin: 0;
      padding: 0;
      }
      .cake-list {
      list-style: none;
      padding: 0;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      max-width: 1200px;
      margin: 0 auto;
      }
      .cake-card {
      background-color: #f7f7f7;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
      transition: background-color 0.3s;
      }
      .cake-card:nth-child(odd) {
      background-color: #e0f4fd;
      }
      .cake-name {
      font-size: 1.5rem;
      margin: 10px 0;
      }
      .cake-details {
      font-size: 0.9rem;
      margin: 10px 0;
      }
      .cake-rate {
      font-weight: bold;
      margin-bottom: 5px;
      }
      .cake-rating {
      color: #ffac33;
      font-size: 1.2rem;
      }
      .add-to-cart-btn {
      background-color: #ffac33;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
      transition: background-color 0.3s;
      }
      .add-to-cart-btn:hover {
      background-color: #ff9933;
      }
      .cart {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 10px;
      margin-top: 20px;
      }
      .cart-header {
      font-size: 1.2rem;
      margin-bottom: 10px;
      }

block content
  // Display menu items with details as cards
  section.menu-info
    h1.center-title Menu Info
    p.center-text Explore our delicious menu options for every occasion
    each cake in cakes
      .card(style="display: flex; flex-direction: row; margin: 10px;background-color: lightblue;")
        img.card-img-top(src=cake.image, alt=cake.name) // Cake image
        .card-body
          h5.card-title(style="font-size: 2rem;  padding: 5px; color:black;") #{cake.name} 
          p.card-text(style="font-size: 1.5rem;  padding: 5px; color:black;") Ingredients: #{cake.ingredients} 
          p.card-text(style="font-size: 1.5rem;   padding: 5px; color:black;") Price: $#{cake.price} 
          p.card-text(style="font-size: 1.5rem;  padding: 5px; color:black;") Rating: #{cake.rating} 
          button.add-to-cart(data-name=cake.name, data-price=cake.price) Add to Cart

  // Cart section
  section.cart
    h2 Your Cart
    ul#cart-items
    p Total Price: $<span id="total-price">0</span>

  // JavaScript for adding items to cart and calculating total price (same as previous)
  script.
    const cart = [];
    const cartItemsList = document.getElementById('cart-items');
    const totalPriceElement = document.getElementById('total-price');

    document.querySelectorAll('button.add-to-cart').forEach((button) => {
      button.addEventListener('click', (event) => {
        const itemName = event.target.getAttribute('data-name');
        const itemPrice = parseFloat(event.target.getAttribute('data-price'));

        cart.push({ name: itemName, price: itemPrice });
        updateCartDisplay();
      });
    });

    function updateCartDisplay() {
      cartItemsList.innerHTML = '';
      let totalPrice = 0;

      cart.forEach((item) => {
        const listItem = document.createElement('li');
        listItem.textContent = `${item.name} - $${item.price.toFixed(2)}`;
        cartItemsList.appendChild(listItem);
        totalPrice += item.price;
      });

      totalPriceElement.textContent = totalPrice.toFixed(2);
    }
