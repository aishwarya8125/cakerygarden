doctype html
html
  head
    title Contact Us - Online Cake Delivery
    style.
      body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
      }
      .contact-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .contact-form {
      display: grid;
      gap: 15px;
      }
      .form-group {
      display: grid;
      gap: 5px;
      }
      label {
      font-weight: bold;
      }
      input,
      textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      resize: vertical;
      }
      button {
      background-color: #ffac33;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      cursor: pointer;
      transition: background-color 0.3s;
      }
      button:hover {
      background-color: #ff9933;
      }
  body
    h1(style='text-align: center;') Contact Us
    .contact-container
      form.contact-form
        .form-group
          label(for='name') Your Name
          input#name(type='text' name='name' required='')
        .form-group
          label(for='email') Your Email
          input#email(type='email' name='email' required='')
        .form-group
          label(for='phone') Your Phone Number
          input#phone(type='tel' name='phone' required='')
        .form-group
          label(for='message') Message
          textarea#message(name='message' rows='6' required='')
        button(type='submit') Send Message
